#!/usr/bin/env bash
# Script to install and configure HAproxy on your lb-01 server.
# Configure HAproxy so that it send traffic to web-01 and web-02
# Distribute requests using a roundrobin algorithm
# Make sure that HAproxy can be managed via an init script
# configure server with the right hostnames: 151063-web-01 and 151063-web-02.

apt-get -y install software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.6
apt-get -y update
apt-get -y install haproxy

sed -i -e '$aENABLED=1\n' /etc/default/haproxy
sed -i -e '$a\listen balancer\n\tbind :80\n\tbalance roundrobin\n\tserver 151063-web-01 100.25.212.218:80 check\n\tserver 151063-web-02 100.25.194.178:80 check\n' /etc/haproxy/haproxy.cfg
service haproxy restart
